<div class="table-responsive table-scrollable">
  <table class="table table-striped table-bordered table-hover ">
    <thead>
      <tr>
        <th>Gruppe</th>
        <th>Anrede</th>
        <th>Nachname</th>
        <th>Geburtsname</th>
        <th>Vorname</th>
        <th>Geburtsdatum</th>
        <th>Geburtsort</th>
        <th>Adresse</th>
        <th>Plz</th>
        <th>Stadt</th>
        <th>Telefonnummer</th>
        <th>Tsp versicherungskunde</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @kundes.each do |kunde| %>
        <tr>
          <td><%= kunde.gruppe %></td>
          <td><%= kunde.anrede %></td>
          <td><%= link_to kunde.nachname, kunde_path(kunde) %></td>
          <td><%= kunde.geburtsname %></td>
          <td><%= link_to kunde.vorname, kunde_path(kunde) %></td>
          <td><%= kunde.geburtsdatum %></td>
          <td><%= kunde.geburtsort %></td>
          <td><%= kunde.adresse %></td>
          <td><%= kunde.plz %></td>
          <td><%= kunde.stadt %></td>
          <td><%= kunde.telefonnummer %></td>
          <td><%= kunde.tsp_versicherungskunde %></td>
          <td><%= link_to 'Show', kunde, class: "btn btn-info btn-sm"  %></td>
          <td><%= link_to 'Edit', edit_kunde_path(kunde), class: "btn btn-warning btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
