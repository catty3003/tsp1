<div class="bs-docs-section">
  <div class="row">
    <div class="col-md-12">


      <div class="page-header">          
        <h1>Alle Zulassungsantr√§ge</h1>
      </div>

      <div class="col-md-3" id="leftCol">
        <div class="well">    
          <%= render 'layouts/sidebar_show' %>
        </div>
      </div>     

      <div class="col-md-9" id="rightCol">          
        <div class="well">          
          <div class="panel panel-info">
            <div class="panel-body">  
              <div class="bs-example table-responsive">
                <table class="table table-striped table-bordered table-hover ">
                <thead>
                  <tr>
                    <th>Kunde</th>
                    <th>Identnummer</th>
                    <th>Fz-brief-nr</th>
                    <th>Amtliches kennzeichen</th>
                    <th>Neues kennzeichen</th>
                  </tr>
                </thead>

                <tbody>
                  <% @anmeldungs.each do |anmeldung| %>
                    <tr>
                      <td><%= link_to anmeldung.kunde.vorname, anmeldung_path(anmeldung) %>, <%= link_to anmeldung.kunde.nachname, anmeldung_path(anmeldung) %></td>
                      <td><%= anmeldung.identnummer %></td>
                      <td><%= anmeldung.fz_brief_nr %></td>
                      <td><%= anmeldung.amtliches_kennzeichen1 %> - <%= anmeldung.amtliches_kennzeichen2 %></td>
                      <td><%= anmeldung.neues_kennzeichen1 %> - <%= anmeldung.neues_kennzeichen2 %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              </div>

<br>
            </div>
          </div>
        </div>    
      </div>


    </div>     
  </div>
</div>



